# Terraform Variables - Dev Environment
#
# Copia este archivo a terraform.tfvars y configura las variables
# NUNCA commitees el archivo terraform.tfvars (está en .gitignore)

# AWS Region
aws_region = "us-east-1"

# Environment
environment = "dev"

# Database Credentials
# IMPORTANTE: La contraseña debe ser segura y NO debe estar hardcodeada
# Opciones para proveer db_password:
#
# 1. Variable de entorno:
#    export TF_VAR_db_password="tu_password_segura"
#    terraform apply
#
# 2. Parámetro en línea:
#    terraform apply -var="db_password=tu_password_segura"
#
# 3. Archivo terraform.tfvars (NO recomendado para producción):
#    db_password = "tu_password_segura"

db_user = "admin"
# db_password = "CHANGE_ME"  # Descomentar solo para desarrollo local
db_name = "microservices_db"

# ECS Configuration
ecs_desired_count = 1
ecs_task_cpu      = 256
ecs_task_memory   = 512
