# Terraform Variables - Stage Environment
#
# Copia este archivo a terraform.tfvars y configura las variables
# NUNCA commitees el archivo terraform.tfvars (está en .gitignore)

# AWS Region
aws_region = "us-east-1"

# Environment
environment = "stage"

# Database Credentials
# IMPORTANTE: La contraseña debe ser segura y NO debe estar hardcodeada
# Usar variable de entorno: export TF_VAR_db_password="password_segura"

db_user = "admin"
# db_password = "CHANGE_ME"  # Proveer via TF_VAR_db_password
db_name = "microservices_db"

# ECS Configuration
ecs_desired_count = 1
ecs_task_cpu      = 256
ecs_task_memory   = 512
